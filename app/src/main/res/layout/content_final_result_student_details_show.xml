<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shamsapp.shamscorner.com.pocketuni_forum.final_result.FinalResultStudentDetailsShow"
    tools:showIn="@layout/activity_final_result_student_details_show">

    <TextView
        android:id="@+id/tv_semester_result_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result For Semester - 1"
        android:gravity="center"
        android:textColor="@color/bk_main"
        android:textSize="24sp"
        android:padding="5dp"
        android:background="@color/off_white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/bk_main"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/bk_main"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Credit"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/bk_main"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Grade"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bk_for"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_container">

        </LinearLayout>
    </ScrollView>


</LinearLayout>
