<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shamsapp.shamscorner.com.pocketuni_forum.final_result.FinalResultStudent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/semester_1"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 1"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/semester_2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 2"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/semester_3"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 3"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/semester_4"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 4"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/semester_5"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 5"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/semester_6"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 6"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/semester_7"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 7"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/semester_8"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn_default"
                android:text="Semester - 8"
                android:textColor="@color/off_white"
                android:textSize="22sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
