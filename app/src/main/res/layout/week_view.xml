<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title"
        android:background="@drawable/background_btn_default_back"
        android:textColor="@color/white"
        android:text="Select bellow"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:padding="10dp"/>

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textSize="22sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/radsat"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radsun"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radmon"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radtue"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radwed"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radthus"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radfri"/>
</LinearLayout>