<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_for"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_routine_course_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE 101"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/off_white" />

            <TextView
                android:id="@+id/tv_routine_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Fundamentals"
                android:textColor="@color/off_white" />

            <TextView
                android:id="@+id/tv_routine_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.00 - 8.50"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/off_white" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/bk_main" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cross" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/bk_main" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/clock" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bk_main" />
</LinearLayout>